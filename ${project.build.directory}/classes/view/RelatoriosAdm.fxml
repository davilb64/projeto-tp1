<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.RelatoriosAdmController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="%dashboardAdm.actions.reports" />

    <HBox alignment="CENTER" spacing="10.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#gerarRelatorio" styleClass="primary-action-button" text="%generateReport.title">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#exportarPDF" text="%reportsAdmin.button.exportPDF">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#exportarCSV" text="%reportsAdmin.button.exportXLS">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="section-title" text="%reportsAdmin.table.title" />

        <TableView fx:id="tblRelatorios" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" maxWidth="100.0" minWidth="60.0" prefWidth="70.0" text="%employeeManagement.table.col.id" />
                <TableColumn fx:id="colTipoRelatorio" text="%generateReport.label.reportType" />
                <TableColumn fx:id="colDataGeracao" text="%reportsAdmin.table.col.generationDate" />
                <TableColumn fx:id="colResponsavel" text="%reportsAdmin.table.col.responsible" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#visualizarRelatorio" text="%reportsAdmin.button.view">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#editarRelatorio" text="%employeeManagement.actions.edit">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#excluirRelatorio" styleClass="danger-action-button" text="%interviewManagement.actions.delete">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>