<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="588.0" prefWidth="735.0" spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.CandidaturaAVagaController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="%vacancyApplication.title">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">

        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="%vacancyApplication.list.availableVacancies" />
            <ListView fx:id="listVagas" VBox.vgrow="ALWAYS" />
        </VBox>

        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="%vacancyApplication.list.candidates" />
            <ListView fx:id="listCandidatos" VBox.vgrow="ALWAYS" />
        </VBox>

    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="actions-panel">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button fx:id="btnCancelar" cancelButton="true" mnemonicParsing="false" text="%vacancyApplication.button.cancel">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnSalvar" defaultButton="true" mnemonicParsing="false" styleClass="primary-action-button" text="%vacancyApplication.button.associate">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

</VBox>