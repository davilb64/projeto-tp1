<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.GestaoEntrevistaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="GestÃ£o de Entrevistas">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label style="-fx-font-size: 18;" text="ID:" GridPane.halignment="RIGHT" />
        <Label style="-fx-font-size: 18;" text="Candidato:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <Label style="-fx-font-size: 18;" text="Recrutador:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <Label style="-fx-font-size: 18;" text="Vaga: " GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

        <TextField fx:id="txtId" promptText="Filtrar por ID" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="360.0" prefHeight="36.0" style="-fx-padding: 6 10;">
            <GridPane.margin>
                <Insets bottom="10.0" />
            </GridPane.margin>
        </TextField>
        <ComboBox fx:id="cbCandidato" promptText="Selecione o candidato" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" prefWidth="360.0" prefHeight="36.0" style="-fx-padding: 6 10;">
            <GridPane.margin>
                <Insets bottom="10.0" />
            </GridPane.margin>
        </ComboBox>
        <ComboBox fx:id="cbRecrutador" promptText="Selecione o recrutador" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" prefWidth="360.0" prefHeight="36.0" style="-fx-padding: 6 10;">
            <GridPane.margin>
                <Insets bottom="10.0" />
            </GridPane.margin>
        </ComboBox>
        <ComboBox fx:id="cbVaga" promptText="Selecione a vaga" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" prefWidth="360.0" prefHeight="36.0" style="-fx-padding: 6 10;"/>

        <Button fx:id="btnFiltrar" mnemonicParsing="false" onAction="#filtra" text="Filtrar" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>
        <Button fx:id="btnMarcarEntrevista" onAction="#cadastrarEntrevista" styleClass="primary-action-button" text="Marcar Nova entrevista">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <TableView fx:id="tblEntrevista" prefHeight="296.0" prefWidth="354.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" maxWidth="100.0" minWidth="48.0" prefWidth="48.0" text="ID" />
            <TableColumn fx:id="colCandidato" prefWidth="102.0" text="Candidato" />
            <TableColumn fx:id="colRecrutador" prefWidth="95.0" text="Recrutador" />
            <TableColumn fx:id="colVaga" maxWidth="200.0" minWidth="100.0" prefWidth="105.0" text="Vaga" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editarEntrevista" text="Editar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#excluirEntrevista" styleClass="danger-action-button" text="Excluir">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
