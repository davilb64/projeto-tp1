<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.PrincipalAdministradorController">

    <left>
        <VBox alignment="TOP_CENTER" minWidth="-Infinity" spacing="1.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <ImageView fitHeight="120.0" fitWidth="106.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../humanize-logo.png" />
            </ImageView>

            <Button id="buttonLateral" fx:id="btnDashboard" maxWidth="1.7976931348623157E308" onAction="#showDashboard" text="Dashboard">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <Button id="buttonLateral" fx:id="btnUsuarios" maxWidth="1.7976931348623157E308" onAction="#showUsuarios" text="Usuários">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnContratacoes" maxWidth="1.7976931348623157E308" onAction="#showContratacoes" text="Contratações">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnCandidatos" maxWidth="1.7976931348623157E308" onAction="#showCandidatos" text="Candidatos">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnEntrevistas" maxWidth="1.7976931348623157E308" onAction="#showEntrevistas" text="Entrevistas">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnRelatorios" maxWidth="1.7976931348623157E308" onAction="#showRelatorios" text="Relatórios">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnRecrutadores" maxWidth="1.7976931348623157E308" onAction="#showRecrutadores" text="Recrutadores">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnFinanceiro" maxWidth="1.7976931348623157E308" onAction="#showFinanceiro" text="Financeiro">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button id="buttonLateral" fx:id="btnConfig" maxWidth="1.7976931348623157E308" onAction="#showConfiguracoes" text="Configurações">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="1.7976931348623157E308" onAction="#sair" text="Sair">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Selecione um menu">
                <font><Font size="21.0" /></font>
            </Text>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            <Text fill="#6b6b6b" strokeType="OUTSIDE" strokeWidth="0.0" text=" © 2025 Humanize. Todos os direitos reservados." />
        </HBox>
    </bottom>
</BorderPane>