<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.PrincipalAdministradorController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="180.0" spacing="1.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">

            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../humanize-logo.png" />
                </image>
            </ImageView>

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                <VBox alignment="TOP_CENTER" spacing="1.0">

                    <Button fx:id="btnDashboard" maxWidth="1.7976931348623157E308" onAction="#showDashboard" styleClass="buttonLateral" text="%sidebar.dashboard">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>
                    <Button fx:id="btnUsuarios" maxWidth="1.7976931348623157E308" onAction="#showUsuarios" styleClass="buttonLateral" text="%sidebar.users" />
                    <Button fx:id="btnCandidatos" maxWidth="1.7976931348623157E308" onAction="#showCandidatos" styleClass="buttonLateral" text="%sidebar.candidates" />
                    <Button fx:id="btnEntrevistas" maxWidth="1.7976931348623157E308" onAction="#showEntrevistas" styleClass="buttonLateral" text="%sidebar.interviews" />
                    <Button fx:id="btnRelatorios" maxWidth="1.7976931348623157E308" onAction="#showRelatorios" styleClass="buttonLateral" text="%sidebar.reports" />
                    <Button fx:id="btnVagas" maxWidth="1.7976931348623157E308" onAction="#showVagas" styleClass="buttonLateral" text="%sidebar.vacancies" />
                    <Button fx:id="btnFinanceiro" maxWidth="1.7976931348623157E308" onAction="#showFinanceiro" styleClass="buttonLateral" text="%sidebar.finance" />
                    <Button fx:id="btnFuncionarios" maxWidth="1.7976931348623157E308" onAction="#showFuncionarios" styleClass="buttonLateral" text="%sidebar.employees" />
                    <Button fx:id="btnPerfil" maxWidth="1.7976931348623157E308" onAction="#showPerfil" styleClass="buttonLateral" text="%sidebar.profile" />

                    <Button fx:id="btnConfig" maxWidth="1.7976931348623157E308" onAction="#showConfiguracoes" styleClass="buttonLateral" text="%sidebar.settings">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <ImageView fx:id="fotoPerfil" fitHeight="120.0" fitWidth="120.0" onMouseClicked="#showPerfil" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../fotos_perfil/default_avatar.png" />
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0" />
                        </VBox.margin>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </ImageView>

                </VBox>
            </ScrollPane>

            <Button maxWidth="1.7976931348623157E308" onAction="#sair" text="%sidebar.button.logout">
                <cursor><Cursor fx:constant="HAND" /></cursor>
                <VBox.margin>
                    <Insets top="1.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%mainView.placeholder.selectMenu" />
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            <!-- Chave reutilizada de 'login' -->
            <Text fill="#6b6b6b" strokeType="OUTSIDE" strokeWidth="0.0" text="%login.footer.copyright" />
        </HBox>
    </bottom>
</BorderPane>
