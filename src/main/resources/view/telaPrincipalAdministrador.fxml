<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.PrincipalAdministradorController">
    <left>
        <VBox spacing="1.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <Button fx:id="buttonLateral" onAction="#showDashboard" prefWidth="150.0" text="Dashboard">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button fx:id="buttonLateral" onAction="#showUsuarios" prefHeight="29.0" prefWidth="150.0" text="Usuários">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button fx:id="buttonLateral" onAction="#showRelatorios" prefWidth="150.0" text="Relatórios">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button fx:id="buttonLateral" onAction="#showConfiguracoes" prefWidth="150.0" text="Configurações">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <VBox alignment="BOTTOM_LEFT" prefHeight="260.0" prefWidth="150.0">
                <Button mnemonicParsing="false" onAction="#sair" prefHeight="29.0" prefWidth="59.0" text="Sair">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Selecione um menu">
                <font>
                    <Font size="21.0"/>
                </font>
            </Text>
        </StackPane>
    </center>
   <bottom>
      <Text fill="#6b6b6b" strokeType="OUTSIDE" strokeWidth="0.0" text=" © 2025 Humanize. Todos os direitos reservados." BorderPane.alignment="BOTTOM_LEFT" />
   </bottom>
</BorderPane>
