<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.RelatoriosAdmController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="Relatórios" />

    <HBox alignment="CENTER" spacing="10.0">
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#gerarRelatorio" styleClass="primary-action-button" text="Gerar Relatório">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#exportarPDF" text="Exportar PDF">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#exportarCSV" text="Exportar XLS">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="section-title" text="TABELA DE RELATÓRIOS" />

        <TableView fx:id="tblRelatorios" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" maxWidth="100.0" minWidth="60.0" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="colTipoRelatorio" text="Tipo de Relatório" />
                <TableColumn fx:id="colDataGeracao" text="Data de Geração" />
                <TableColumn fx:id="colResponsavel" text="Responsável" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#visualizarRelatorio" text="Visualizar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#editarRelatorio" text="Editar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#excluirRelatorio" styleClass="danger-action-button" text="Excluir">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
