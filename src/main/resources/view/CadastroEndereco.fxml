<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxWidth="450.0" minWidth="400.0" spacing="15.0" style="-fx-padding: 24;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.CadastroEnderecoController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-radius: 10;" styleClass="screen-title" text="%addressRegistration.title" />

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="section-title" text="%addressRegistration.subtitle" textAlignment="CENTER" wrapText="true" />

    <GridPane hgap="10.0" vgap="12.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> </rowConstraints>

        <Label styleClass="filter-label" text="%addressRegistration.label.cep" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="txtCep" promptText="%addressRegistration.prompt.cep" HBox.hgrow="ALWAYS" />
            <ProgressIndicator fx:id="progressIndicator" prefHeight="25.0" prefWidth="25.0" progress="0.0" />
        </HBox>

        <Label styleClass="filter-label" text="%addressRegistration.label.street" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <TextField fx:id="txtLogradouro" promptText="%addressRegistration.prompt.street" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label styleClass="filter-label" text="%addressRegistration.label.number" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="txtNumero" prefWidth="100.0" promptText="%addressRegistration.prompt.number" />
        </HBox>

        <Label styleClass="filter-label" text="%addressRegistration.label.neighborhood" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <TextField fx:id="txtBairro" promptText="%addressRegistration.prompt.neighborhood" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label styleClass="filter-label" text="%addressRegistration.label.city" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
        <TextField fx:id="txtCidade" promptText="%addressRegistration.prompt.city" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label styleClass="filter-label" text="%addressRegistration.label.state" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="5">
            <ComboBox fx:id="estadoCombo" prefWidth="150.0" promptText="%addressRegistration.prompt.state" />
        </HBox>

    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <padding>
            <Insets top="10.0" />
        </padding>
        <Button cancelButton="true" onAction="#cancelar" text="%addressRegistration.button.cancel">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button defaultButton="true" onAction="#salvarEndereco" styleClass="primary-action-button" text="%addressRegistration.button.save">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
