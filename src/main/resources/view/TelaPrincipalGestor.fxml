<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.PrincipalGestorController">

    <left>
        <VBox alignment="TOP_CENTER" minWidth="-Infinity" spacing="1.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <ImageView fitHeight="120.0" fitWidth="106.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../humanize-logo.png" />
            </ImageView>

            <Button fx:id="btnDashboard" maxWidth="1.7976931348623157E308" onAction="#showDashboard" styleClass="buttonLateral" text="Dashboard">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnRecrutadores" maxWidth="1.7976931348623157E308" onAction="#showRecrutadores" styleClass="buttonLateral" text="Recrutadores">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnVagas" maxWidth="1.7976931348623157E308" onAction="#showVagas" styleClass="buttonLateral" text="Vagas">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnContratacoes" maxWidth="1.7976931348623157E308" onAction="#showContratacoes" styleClass="buttonLateral" text="Contratações">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnRelatorios" maxWidth="1.7976931348623157E308" onAction="#showRelatorios" styleClass="buttonLateral" text="Relatórios">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnFinanceiro" maxWidth="1.7976931348623157E308" onAction="#showFinanceiro" styleClass="buttonLateral" text="Financeiro">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
         <Button fx:id="btnPerfil" maxWidth="1.7976931348623157E308" onAction="#showPerfil" styleClass="buttonLateral" text="Meu Perfil">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
            <Button fx:id="btnConfig" maxWidth="1.7976931348623157E308" onAction="#showConfig" styleClass="buttonLateral" text="Configurações">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
         <ImageView fx:id="fotoPerfil" fitHeight="120.0" fitWidth="120.0" onMouseClicked="#showPerfil" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </ImageView>

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="1.7976931348623157E308" onAction="#sair" text="Sair">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Selecione um menu" />
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            <Text fill="#6b6b6b" strokeType="OUTSIDE" strokeWidth="0.0" text=" © 2025 Humanize. Todos os direitos reservados." />
        </HBox>
    </bottom>
</BorderPane>
