<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="550.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.RegrasSalariaisController">
    <VBox alignment="CENTER" prefHeight="385.0" prefWidth="600.0" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="50.0" right="50.0" top="10.0"/>
        </padding>
        <Label text="Configurar Regras Salariais" underline="true">
            <font>
                <Font size="25.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <VBox alignment="CENTER" prefHeight="87.0" prefWidth="150.0">
                <Label text="Cargo">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField prefHeight="23.0" prefWidth="111.0"/>
            </VBox>
            <Region prefHeight="90.0" prefWidth="141.0"/>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                <Label text="Nível">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                <Label text="Salário Base">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField/>
            </VBox>
            <Region prefHeight="87.0" prefWidth="141.0"/>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                <Label text="Benefícios">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <Region prefHeight="87.0" prefWidth="127.0"/>
            <VBox alignment="CENTER" prefHeight="157.0" prefWidth="150.0">
                <Label text="Descontos">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField/>
            </VBox>
            <Region prefHeight="87.0" prefWidth="127.0"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                <Label text="Adicionais">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField/>
            </VBox>
            <Region prefHeight="90.0" prefWidth="141.0"/>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                <Label text="Ajustes">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField/>
            </VBox>
        </HBox>
        <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="135.0" style="-fx-background-color: #ffc0cb;"
                text="Salvar">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </VBox>
</AnchorPane>
