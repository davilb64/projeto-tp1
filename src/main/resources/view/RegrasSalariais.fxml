<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.RegrasSalariaisController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="%salaryRules.title">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="20.0" vgap="30.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label styleClass="filter-label" text="%employeeManagement.filter.label.position" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
        <ChoiceBox fx:id="CBcargo" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label styleClass="filter-label" text="%payroll.filter.label.level" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
        <ChoiceBox fx:id="CBnivel" maxWidth="1.7976931348623157E308" GridPane.columnIndex="3" GridPane.rowIndex="0" />


        <Label styleClass="filter-label" text="%salaryRules.label.baseSalary" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <TextField fx:id="txtSalarioBase" maxWidth="1.7976931348623157E308" promptText="%salaryRules.prompt.baseSalary" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label styleClass="filter-label" text="%salaryRules.label.benefits" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <ChoiceBox fx:id="CBbeneficios" maxWidth="1.7976931348623157E308" GridPane.columnIndex="3" GridPane.rowIndex="1" />

    </GridPane>

    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="card-configuracao">
        <padding>
            <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
        </padding>
        <Label styleClass="filter-label" text="%salaryRules.feedback.levelAdic" />
        <Label fx:id="lblAdicionalValor" style="-fx-font-weight: bold; -fx-text-fill: #007bff;" text="R$ 0,00" />

        <Label text="|" />

        <Label styleClass="filter-label" text="%salaryRules.feedback.benefitsValue" />
        <Label fx:id="lblBeneficiosValor" style="-fx-font-weight: bold; -fx-text-fill: #28a745;" text="R$ 0,00" />
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <children>
            <TableView fx:id="tableViewRegras" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCargo" prefWidth="180.0" text="%employeeManagement.table.col.position" />
                    <TableColumn fx:id="colNivel" prefWidth="120.0" text="%salaryRules.table.col.level" />
                    <TableColumn fx:id="colSalarioBase" prefWidth="130.0" text="%salaryRules.table.col.baseSalary" />
                    <TableColumn fx:id="colAdicionalNivel" prefWidth="130.0" text="%salaryRules.table.col.levelBonus" />
                    <TableColumn fx:id="colBeneficios" prefWidth="130.0" text="%salaryRules.table.col.benefits" />
                    <TableColumn fx:id="colSalarioTotal" prefWidth="130.0" text="%salaryRules.table.col.totalSalary" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </children>
    </HBox>


    <GridPane hgap="10.0" styleClass="total-summary-panel">
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" minWidth="130.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="130.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="130.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="130.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="130.0" prefWidth="130.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <Label style="-fx-font-weight: bold;" text="%salaryRules.totals.label" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="0" />

        <Label text="%salaryRules.totals.base" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
        <Label text="%salaryRules.totals.level" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
        <Label text="%salaryRules.totals.benefits" GridPane.columnIndex="4" GridPane.halignment="LEFT" GridPane.rowIndex="0" />

        <Label fx:id="lblTotalBase" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="R$ 0,00" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
        <Label fx:id="lblTotalAdicional" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="R$ 0,00" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
        <Label fx:id="lblTotalBeneficios" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="R$ 0,00" GridPane.columnIndex="4" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
    </GridPane>


    <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="actions-panel">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
        <Button fx:id="btnCancelar" cancelButton="true" mnemonicParsing="false" text="%candidateRegistration.button.cancel" />
        <Button fx:id="btnSalvar" defaultButton="true" mnemonicParsing="false" styleClass="primary-action-button" text="%candidateRegistration.button.save">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
