<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.AtribuirRecrutadorAVagaController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="Atribuir Recrutadores" />

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" styleClass="stat-card-base, stat-card-success" HBox.hgrow="ALWAYS">
            <Label text="Total de Recrutadores" />
            <Label fx:id="lblTotalRecrutadores" styleClass="stat-card-value" text="8" />
        </VBox>
        <VBox alignment="CENTER" styleClass="stat-card-base, stat-card-warning" HBox.hgrow="ALWAYS">
            <Label text="Vagas sem Recrutador" />
            <Label fx:id="lblVagasSemRecrutador" styleClass="stat-card-value" text="4" />
        </VBox>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>

    <HBox alignment="BOTTOM_LEFT" spacing="20.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <ComboBox fx:id="comboRecrutador" promptText="Selecione o Recrutador" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="comboVaga" promptText="Selecione a Vaga" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnAtribuir" defaultButton="true" minWidth="-Infinity" styleClass="primary-action-button" text="Atribuir" />
    </HBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Label styleClass="section-title" text="Lista de Recrutadores Ativos" />
        <TableView fx:id="tblRecrutadores" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" text="Nome do Recrutador" />
                <TableColumn fx:id="colVagas" text="Vagas Atribuídas" />
                <TableColumn fx:id="colStatus" maxWidth="150.0" minWidth="100.0" text="Status" />
                <TableColumn fx:id="colAcoes" maxWidth="150.0" minWidth="100.0" text="Ações" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
   <padding>
      <Insets bottom="10.0" />
   </padding>
</VBox>
