<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.AtribuirRecrutadorAVagaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Atribuir Recrutadores">
        <font>
            <Font name="System Bold" size="25.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" styleClass="stat-card-success" HBox.hgrow="ALWAYS">
            <Label text="Total de Recrutadores" textFill="WHITE" />
            <Label fx:id="lblTotalRecrutadores" text="8" textFill="WHITE">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
        <VBox alignment="CENTER" styleClass="stat-card-success" HBox.hgrow="ALWAYS">
            <Label text="Recrutadores Ativos" textFill="WHITE" />
            <Label fx:id="lblRecrutadoresAtivos" text="6" textFill="WHITE">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
        <VBox alignment="CENTER" styleClass="stat-card-warning" HBox.hgrow="ALWAYS">
            <Label text="Vagas sem Recrutador" textFill="WHITE" />
            <Label fx:id="lblVagasSemRecrutador" text="4" textFill="WHITE">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>
        </VBox>
    </HBox>

    <HBox alignment="BOTTOM_LEFT" spacing="20.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <ComboBox fx:id="comboRecrutador" promptText="Selecione o Recrutador" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="comboVaga" promptText="Selecione a Vaga" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnAtribuir" defaultButton="true" minWidth="-Infinity" styleClass="primary-action-button" text="Atribuir" />
    </HBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
        <Label text="Lista de Recrutadores Ativos">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TableView fx:id="tblRecrutadores" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" text="Nome do Recrutador" />
                <TableColumn fx:id="colVagas" text="Vagas Atribuídas" />
                <TableColumn fx:id="colStatus" maxWidth="150.0" minWidth="100.0" text="Status" />
                <TableColumn fx:id="colAcoes" maxWidth="150.0" minWidth="100.0" text="Ações" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>