            <TextField fx:id="txtReceita" promptText="Ex: 500.00" GridPane.columnIndex="1" GridPane.rowIndex="14" />

            <Label styleClass="filter-label" text="Despesas (R$):" GridPane.halignment="RIGHT" GridPane.rowIndex="15" />
            <TextField fx:id="txtDespesas" promptText="Ex: 250.00" GridPane.columnIndex="1" GridPane.rowIndex="15" />

        </GridPane>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="actions-panel">
