            <Label styleClass="filter-label" text="Nome:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <TextField fx:id="txtNome" promptText="Nome completo do usu치rio" GridPane.columnIndex="1" GridPane.rowIndex="2" />

