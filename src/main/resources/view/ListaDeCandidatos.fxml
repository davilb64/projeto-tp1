<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="644.0" prefWidth="874.0" spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.ListaDeCandidatosController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="Candidatos">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label style="-fx-font-size: 18;" text="Nome/E-mail:" GridPane.halignment="RIGHT" />
        <Label style="-fx-font-size: 18;" text="Formação" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <Label style="-fx-font-size: 18;" text="Experiência:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <Label style="-fx-font-size: 18;" text="Média Salarial:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

        <TextField fx:id="txtNome" promptText="Filtrar por Nome/E-mail" GridPane.columnIndex="1" />
        <TextField fx:id="txtFormacao" promptText="Filtrar por Formaçao:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="txtExperiencia" promptText="Filtrar por Experiência" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Button fx:id="btnFiltrar" mnemonicParsing="false" onAction="#filtra" text="Filtrar" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <ComboBox fx:id="comboSalario" promptText="Selecione o intervalo" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </GridPane>

    <HBox alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Button fx:id="btnCadastrar" onAction="#cadastrarUsuario" styleClass="primary-action-button" text="Cadastrar Novo Usuário">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <TableView fx:id="tblUsuarios" prefHeight="296.0" prefWidth="354.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" maxWidth="151.0" minWidth="60.0" prefWidth="150.0" text="Nome" />
            <TableColumn fx:id="colExperiencia" prefWidth="144.0" text="Experiência" />
            <TableColumn fx:id="colFormacao" prefWidth="164.0" text="Formação" />
            <TableColumn fx:id="colDisponibilidade" maxWidth="245.0" minWidth="100.0" prefWidth="178.0" text="Disponibilidade" />
         <TableColumn fx:id="colPretencao" maxWidth="170.0" minWidth="60.0" prefWidth="145.0" text="Pretenção Salarial" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Button fx:id="btnEditarC" mnemonicParsing="false" onAction="#editarCandidato" text="Editar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnExcluiC" mnemonicParsing="false" onAction="#excluirCandidato" styleClass="danger-action-button" text="Excluir">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>
