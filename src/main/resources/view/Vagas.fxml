<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.VagasController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Gestão de Vagas">
        <font>
            <Font name="System Bold" size="25.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <HBox alignment="CENTER_RIGHT">
        <Button onAction="#cadastrarVaga" styleClass="primary-action-button" text="Cadastrar Nova Vaga">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <TableView fx:id="tblVagas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" maxWidth="100.0" minWidth="60.0" prefWidth="70.0" text="ID" />
            <TableColumn fx:id="colCargo" text="Cargo" />
            <TableColumn fx:id="colSalario" text="Salário" />
            <TableColumn fx:id="colStatus" maxWidth="200.0" minWidth="100.0" prefWidth="120.0" text="Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#editarVaga" text="Editar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#excluirVaga" styleClass="danger-action-button" text="Excluir">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
