<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.StatusDaCandidaturaController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="Status da Candidatura">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label styleClass="filter-label" text="Filtrar:" />
        <TextField fx:id="txtFiltro" promptText="Digite nome, cargo ou status..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btnFiltrar" mnemonicParsing="false" text="Filtrar" />
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </HBox>

    <TableView fx:id="tableCandidaturas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCandidato" text="Candidato" />
            <TableColumn fx:id="colCargo" text="Cargo" />
            <TableColumn fx:id="colStatus" maxWidth="1500.0" minWidth="100.0" prefWidth="108.0" text="Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="actions-panel">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#excluirCandidato" styleClass="danger-action-button" text="Excluir">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

</VBox>
