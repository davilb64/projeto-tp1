<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.MenuFinanceiroAdmController">

    <VBox alignment="TOP_CENTER" spacing="5.0">
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="5.0">
            <Button fx:id="btnRegrasSalariais" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showRegrasSalariais" styleClass="sub-navigation-button" text="Regras Salariais" HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button fx:id="btnCadastroFuncionario" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showCadastroFuncionario" styleClass="sub-navigation-button" text="Cadastro de Funcionário" HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button fx:id="btnFolhaPagamento" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showFolhaPagamento" styleClass="sub-navigation-button" text="Folha de Pagamento" HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="5.0">
            <Button fx:id="btnRelatorioFinanceiro" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showRelatorioFinanceiro" styleClass="sub-navigation-button" text="Relatório Financeiro" HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button fx:id="btnContracheques" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showContraCheques" styleClass="sub-navigation-button" text="Contracheques" HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
    </VBox>

    <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </StackPane>

</VBox>
