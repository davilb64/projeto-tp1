<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="450.0" minWidth="400.0" spacing="15.0" style="-fx-padding: 24;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.MarcarEntrevistaController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-radius: 10;" styleClass="screen-title" text="Marcar Entrevista" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane fx:id="dtData" hgap="10.0" vgap="12.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <Label styleClass="filter-label" text="ID:" GridPane.halignment="RIGHT" />
        <Label fx:id="lblId" text="AutomÃ¡tico" GridPane.columnIndex="1" />

        <Label styleClass="filter-label" text="Candidato:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />

        <Label styleClass="filter-label" text="Cargo:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />

        <Label styleClass="filter-label" text="Recrutador:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <ChoiceBox fx:id="cbRecrutador" prefWidth="150.0" />
         </children>
        </HBox>

        <Label styleClass="filter-label" text="Data:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <StackPane HBox.hgrow="ALWAYS" />
        </HBox>
      <ChoiceBox fx:id="cbCandidato" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ChoiceBox fx:id="cbCargo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <DatePicker fx:id="dtDataEntrevista" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label text="Label" />
      <Label prefHeight="17.0" prefWidth="79.0" text="            Status:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
      <ChoiceBox fx:id="cbStatus" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <padding>
            <Insets top="10.0" />
        </padding>
        <Button fx:id="btnCancelar" cancelButton="true" onAction="#fecharJanela" text="Cancelar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnSalvar" defaultButton="true" onAction="#salvarEntrevista" styleClass="primary-action-button" text="Salvar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
