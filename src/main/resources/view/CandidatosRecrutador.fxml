<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.CandidatosRecrutadorController">

    <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="10.0">
        <Button fx:id="btnCadastro" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showCadastro" styleClass="sub-navigation-button" text="Candidatos" HBox.hgrow="ALWAYS">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnCandidatura" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showCandidatura" styleClass="sub-navigation-button" text="Candidatura Ã  Vaga" HBox.hgrow="ALWAYS">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnStatus" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showStatus" styleClass="sub-navigation-button" text="Status da Candidatura" HBox.hgrow="ALWAYS">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <VBox.margin>
            <Insets top="10.0" /> </VBox.margin>
    </StackPane>

</VBox>
