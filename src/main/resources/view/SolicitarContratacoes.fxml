<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SolicitarContratacoesController">
    <VBox alignment="CENTER" prefHeight="454.0" prefWidth="600.0" spacing="5.0">
        <padding>
            <Insets left="50.0" right="50.0"/>
        </padding>
        <Label text="Solicitar Candidatura">
            <font>
                <Font name="System Italic" size="30.0"/>
            </font>
        </Label>
        <HBox prefHeight="6.0" prefWidth="600.0" spacing="10.0">
            <Label text="Nome completo:"/>
            <TextField/>
        </HBox>
        <HBox prefHeight="0.0" prefWidth="600.0" spacing="70.0">
            <Label text="E-mail:"/>
            <TextField/>
        </HBox>
        <HBox prefHeight="0.0" prefWidth="600.0" spacing="55.0">
            <Label text="Telefone:"/>
            <TextField/>
        </HBox>
        <HBox prefHeight="15.0" prefWidth="600.0" spacing="5.0">
            <Label text="Area de interesse:"/>
            <ChoiceBox prefWidth="150.0"/>
        </HBox>
        <HBox prefHeight="21.0" prefWidth="600.0" spacing="5.0">
            <Label text="Curso/Formação:"/>
            <TextField/>
        </HBox>
        <HBox prefHeight="131.0" prefWidth="600.0" spacing="35.0">
            <Label text="Experiencia:"/>
            <TextArea prefHeight="134.0" prefWidth="298.0"/>
        </HBox>
        <HBox prefHeight="0.0" prefWidth="600.0" spacing="5.0">
            <Label text="Anexar Curriculo:"/>
            <Button mnemonicParsing="false" text="Selecionar arquivo"/>
        </HBox>
        <HBox prefHeight="0.0" prefWidth="600.0" spacing="10.0">
            <Label text="Disponibilidade:"/>
            <DatePicker prefHeight="25.0" prefWidth="120.0"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="32.0" prefWidth="610.0" spacing="15.0">
            <Button mnemonicParsing="false" text="Solicitar candidatura"/>
            <Button mnemonicParsing="false" text="Limpar"/>
            <Button mnemonicParsing="false" text="Cancelar"/>
        </HBox>
    </VBox>
</AnchorPane>
