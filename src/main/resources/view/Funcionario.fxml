<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.FuncionarioController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="Gestão de Funcionários">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label style="-fx-font-size: 18;" text="ID:" GridPane.halignment="RIGHT" />
        <Label style="-fx-font-size: 18;" text="Nome:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <Label style="-fx-font-size: 18;" text="Cargo:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <Label style="-fx-font-size: 18;" text="Perfil:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

        <TextField fx:id="txtId" promptText="Filtrar por ID" GridPane.columnIndex="1" />
        <TextField fx:id="txtNome" promptText="Filtrar por Nome" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="txtCargo" promptText="Filtrar por Cargo" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Button fx:id="btnFiltrar" mnemonicParsing="false" onAction="#filtra" text="Filtrar" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <ComboBox fx:id="cbPerfil" promptText="Selecione o perfil" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </GridPane>

    <HBox alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Button fx:id="btnContratarFuncionario" onAction="#contratarFuncionario" styleClass="primary-action-button" text="Contratar Funcionário">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editarFuncionario" text="Editar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnDemitir" mnemonicParsing="false" onAction="#demitirFuncionario" styleClass="danger-action-button" text="Demitir">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <HBox alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>

    <TableView fx:id="tblFuncionarios" prefHeight="296.0" prefWidth="354.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" maxWidth="100.0" minWidth="39.0" prefWidth="44.0" text="ID" />
            <TableColumn fx:id="colNome" prefWidth="73.0" text="Nome" />
            <TableColumn fx:id="colCargo" prefWidth="81.0" text="Cargo" />
            <TableColumn fx:id="colPerfil" maxWidth="200.0" minWidth="65.0" prefWidth="65.0" text="Perfil" />
            <TableColumn fx:id="colSalario" prefWidth="104.0" text="Salário" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>
