<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.UsuariosController">

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="%userManagement.title">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <!-- Reutilizada: employeeManagement.filter.label.id -->
        <Label style="-fx-font-size: 18;" text="%employeeManagement.filter.label.id" GridPane.halignment="RIGHT" />
        <!-- Reutilizada: employeeManagement.filter.label.name -->
        <Label style="-fx-font-size: 18;" text="%employeeManagement.filter.label.name" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <!-- Reutilizada: candidateRegistration.label.email -->
        <Label style="-fx-font-size: 18;" text="%candidateRegistration.label.email" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <!-- Reutilizada: employeeManagement.filter.label.profile -->
        <Label style="-fx-font-size: 18;" text="%employeeManagement.filter.label.profile" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

        <!-- Reutilizada: employeeManagement.filter.prompt.id -->
        <TextField fx:id="txtId" promptText="%employeeManagement.filter.prompt.id" GridPane.columnIndex="1" />
        <!-- Reutilizada: employeeManagement.filter.prompt.name -->
        <TextField fx:id="txtNome" promptText="%employeeManagement.filter.prompt.name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="txtEmail" promptText="%userManagement.filter.prompt.email" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Reutilizada: employeeManagement.filter.button.filter -->
        <Button mnemonicParsing="false" onAction="#filtra" text="%employeeManagement.filter.button.filter" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <!-- Reutilizada: employeeManagement.filter.prompt.profile -->
        <ComboBox fx:id="comboPerfil" promptText="%employeeManagement.filter.prompt.profile" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </GridPane>

    <HBox alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <Button onAction="#cadastrarUsuario" styleClass="primary-action-button" text="%userManagement.actions.registerNew">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <TableView fx:id="tblUsuarios" prefHeight="296.0" prefWidth="354.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colFoto" maxWidth="80.0" minWidth="70.0" prefWidth="70.0" text="%userManagement.table.col.photo" />

            <!-- Reutilizada: employeeManagement.table.col.id -->
            <TableColumn fx:id="colId" maxWidth="100.0" minWidth="60.0" prefWidth="70.0" text="%employeeManagement.table.col.id" />
            <!-- Reutilizada: employeeManagement.table.col.name -->
            <TableColumn fx:id="colNome" text="%employeeManagement.table.col.name" />
            <!-- Reutilizada: submitApplication.label.email -->
            <TableColumn fx:id="colEmail" text="%submitApplication.label.email" />
            <!-- Reutilizada: employeeManagement.table.col.profile -->
            <TableColumn fx:id="colPerfil" maxWidth="200.0" minWidth="100.0" prefWidth="120.0" text="%employeeManagement.table.col.profile" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
        <!-- Reutilizada: employeeManagement.actions.edit -->
        <Button mnemonicParsing="false" onAction="#editarUsuario" text="%employeeManagement.actions.edit">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <!-- Reutilizada: interviewManagement.actions.delete -->
        <Button mnemonicParsing="false" onAction="#excluirUsuario" styleClass="danger-action-button" text="%interviewManagement.actions.delete">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>