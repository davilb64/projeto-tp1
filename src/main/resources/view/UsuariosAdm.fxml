<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.UsuariosController">
   <top>
      <Label text="Gestão de Usuários" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
   </top>
   <center>
       <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
           <padding>
               <Insets top="15.0" />
           </padding>
           <Button onAction="#cadastrarUsuario" text="Cadastrar Novo Usuário">
              <cursor>
                  <Cursor fx:constant="HAND" />
              </cursor>
           </Button>
           <TableView fx:id="tblUsuarios" prefHeight="345.0" prefWidth="450.0">
               <columns>
                   <TableColumn fx:id="colId" prefWidth="20.0" text="ID" />
                   <TableColumn fx:id="colNome" prefWidth="75.0" text="Nome" />
                   <TableColumn fx:id="colEmail" prefWidth="75.0" text="E-mail" />
                   <TableColumn fx:id="colPerfil" prefWidth="75.0" text="Perfil" />
               </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
           </TableView>
           <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <Button mnemonicParsing="false" onAction="#editarUsuario" text="Editar">
                   <cursor>
                       <Cursor fx:constant="HAND" />
                   </cursor>
               </Button>
               <Button mnemonicParsing="false" onAction="#excluirUsuario" text="Excluir">
                   <cursor>
                       <Cursor fx:constant="HAND" />
                   </cursor>
               </Button>
           </HBox>
       </VBox>
   </center>
   <left>
      <Pane prefHeight="464.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="464.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
