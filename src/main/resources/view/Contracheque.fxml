<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.humanize.controller.ContraChequeController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="screen-title" text="%payslip.title" />

    <GridPane hgap="15.0" styleClass="card-configuracao" vgap="10.0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <Label styleClass="filter-label" text="%payslip.label.name" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
        <ComboBox fx:id="cbFuncionario" maxWidth="1.7976931348623157E308" promptText="%payslip.prompt.selectEmployee" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label styleClass="filter-label" text="%payslip.label.position" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <TextField fx:id="txtCargo" editable="false" styleClass="form-field-info" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label styleClass="filter-label" text="%payslip.label.department" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <TextField fx:id="txtDepartamento" editable="false" styleClass="form-field-info" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <Button fx:id="btnBuscar" defaultButton="true" mnemonicParsing="false" styleClass="primary-action-button" text="%button.search" GridPane.columnIndex="4" GridPane.rowIndex="0" />
    </GridPane>

    <TableView fx:id="tabelaContracheque" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colunaEmissao" minWidth="100.0" prefWidth="136.0" text="%payslip.table.col.issueDate" />
            <TableColumn fx:id="colunaProventos" minWidth="100.0" prefWidth="156.0" text="%payslip.table.col.earnings" />
            <TableColumn fx:id="colunaDescon" minWidth="100.0" prefWidth="168.0" text="%payslip.table.col.deductions" />
            <TableColumn fx:id="colunaSald" minWidth="80.0" prefWidth="111.0" text="%payslip.table.col.balance" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="actions-panel">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button fx:id="btnImprimir" disable="true" mnemonicParsing="false" onAction="#imprimirSelecionado" styleClass="secondary-action-button" text="%payslip.button.printSelected">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnExportarTabela" disable="true" mnemonicParsing="false" onAction="#exportarTabela" styleClass="primary-action-button" text="%payslip.button.exportTable">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
