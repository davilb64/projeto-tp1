<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardGestorController">
    <center>
        <VBox alignment="CENTER" prefHeight="465.0" prefWidth="600.0" spacing="20" style="-fx-padding: 20;">

            <HBox alignment="CENTER" prefHeight="58.0" prefWidth="605.0" spacing="20">
                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="155.0" style="-fx-background-color: #1d8a19; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Vagas Abertas" />
                    <Label fx:id="lblTotalUsuarios" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="12" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="155.0" style="-fx-background-color: #1d8a19; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Candidatos em Análise" />
                    <Label fx:id="lblTotalCandidatos" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="34" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="155.0" style="-fx-background-color: #1d8a19; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Solicitações Pendentes" />
                    <Label fx:id="lblVagasAbertas" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="5" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="155.0"
                      style="-fx-background-color: #1d8a19; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Entrevistas Hoje"/>
                    <Label fx:id="lblTotalUsuarios1"
                           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="7"/>
                </VBox>
                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="155.0"
                      style="-fx-background-color: #1d8a19; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Funcionários Ativos"/>
                    <Label fx:id="lblTotalCandidatos1"
                           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="150"/>
                </VBox>
                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="155.0"
                      style="-fx-background-color: #1d8a19; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Última Folha"/>
                    <Label fx:id="lblVagasAbertas1"
                           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="SET/25"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" prefHeight="169.0" prefWidth="607.0" spacing="1.0">
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <Label text="Contratações por Regime">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <PieChart prefWidth="150.0"/>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <Label text="Folha por Departamento ">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <BarChart>
                        <xAxis>
                            <CategoryAxis/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis side="LEFT"/>
                        </yAxis>
                    </BarChart>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <Label text="Evolução de Contratações">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <LineChart>
                        <xAxis>
                            <CategoryAxis side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis side="LEFT"/>
                        </yAxis>
                    </LineChart>
                </VBox>
            </HBox>
            <VBox alignment="CENTER" prefHeight="60.0" prefWidth="660.0" spacing="10.0"
                  style="-fx-border-color: gray; -fx-border-radius: 10; -fx-background-radius: 10;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="Ações Rápidas ">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="48.0" prefWidth="660.0" spacing="15.0">
                    <Button mnemonicParsing="false" text="Criar Vaga">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button mnemonicParsing="false" text="Atribuir Recrutador">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button mnemonicParsing="false" text="Autorizar Contratação">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </HBox>
            </VBox>

        </VBox>
    </center>
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Text>
    </top>

</BorderPane>
